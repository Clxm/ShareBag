<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.share.bag.ui.activitys.mine.address.HarvestActivity">


    <RelativeLayout
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="194px">

        <ImageView
            android:id="@+id/match_return"
            android:layout_width="50px"
            android:layout_height="wrap_content"
            android:src="@mipmap/xiaoyu3"
            android:layout_marginStart="27dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收获地址"
            android:textSize="50px"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />






    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#f2f2f2"/>


    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:id="@+id/recy"></android.support.v7.widget.RecyclerView>-->
<android.support.v7.widget.RecyclerView
    android:id="@+id/harvest_recycler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>




</LinearLayout>
