<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.share.bag.ui.activitys.mine.address.HarvestActivity">


    <RelativeLayout
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/match_return"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:src="@mipmap/xiaoyu3"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货地址"
            android:textSize="18dp"
            android:textColor="@color/navigation_bar_text_color"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/navigation_bar_line_color"/>

    <android.support.v7.widget.RecyclerView
    android:id="@+id/harvest_recycler"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="0dp"/>

    <Button
        android:id="@+id/harvest_add"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="+新增收货地址"
        android:textSize="18dp"
        android:textColor="#FFF"
        android:background="#FD6961"/>


<TextView
    android:id="@+id/yincangpanduan"
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
</LinearLayout>
