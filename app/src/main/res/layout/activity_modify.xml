<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.share.bag.ui.activitys.mine.address.ModifyActivity">
    <!--tools:context="com.share.bag.ui.activitys.mine.AddressActivity">-->

    <RelativeLayout
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/modify_return"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:src="@mipmap/xiaoyu3"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />



        <TextView
            android:id="@+id/modify_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改收货地址"
            android:textSize="18dp"
            android:textColor="@color/navigation_bar_text_color"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/modify_save"
            android:gravity="center"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:text="@string/save"
            android:textSize="12dp"
            android:textColor="@color/navigation_bar_text_color"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"/>



    </RelativeLayout>





    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/navigation_bar_line_color"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="46dp">



        <TextView
            android:layout_marginLeft="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系人"/>




        <EditText
            android:textSize="12dp"
            android:id="@+id/modify_name"
            android:background="@null"
            android:layout_marginLeft="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="姓名"/>


    </LinearLayout>
    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D7D7D7"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="46dp">



        <TextView
            android:layout_marginLeft="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话"/>




        <EditText
            android:inputType="phone"
            android:textSize="12dp"
            android:id="@+id/modify_phone"
            android:background="@null"
            android:layout_marginLeft="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="收货人电话"/>


    </LinearLayout>

    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D7D7D7"/>

    <LinearLayout
        android:id="@+id/modify_layout_city"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="46dp">



        <TextView
            android:layout_marginLeft="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="城市"/>




        <TextView
            android:textSize="12dp"
            android:id="@+id/modify_city"
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="选择收获地址"/>


    </LinearLayout>


    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D7D7D7"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="46dp">



        <TextView
            android:layout_marginLeft="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址"/>


        <!--address_address-->

        <EditText
            android:textSize="12dp"
            android:id="@+id/modify_address"
            android:background="@null"
            android:layout_marginLeft="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="详细地址"/>


    </LinearLayout>



</LinearLayout>
