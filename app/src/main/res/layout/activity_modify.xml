<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.share.bag.ui.activitys.mine.address.ModifyActivity">
    <!--tools:context="com.share.bag.ui.activitys.mine.AddressActivity">-->

    <RelativeLayout
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="194px">

        <ImageView
            android:id="@+id/modify_return"
            android:layout_width="50px"
            android:layout_height="wrap_content"
            android:src="@mipmap/xiaoyu3"
            android:layout_marginStart="27dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />



        <TextView
            android:id="@+id/modify_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改收货地址"
            android:textSize="50px"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/modify_save"
            android:gravity="center"
            android:layout_width="100px"
            android:layout_height="100px"
            android:text="@string/save"
            android:textSize="40px"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="36px" />



    </RelativeLayout>





    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#D7D7D7"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="140px">



        <TextView
            android:layout_marginLeft="96px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系人"/>




        <EditText
            android:id="@+id/modify_name"
            android:background="@null"
            android:layout_marginLeft="110px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="姓名"/>


    </LinearLayout>
    <View
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#D7D7D7"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="140px">



        <TextView
            android:layout_marginLeft="96px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话"/>




        <EditText
            android:id="@+id/modify_phone"
            android:background="@null"
            android:layout_marginLeft="110px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="收货人电话"/>


    </LinearLayout>

    <View
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#D7D7D7"/>

    <LinearLayout
        android:id="@+id/modify_layout_city"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="140px">



        <TextView
            android:layout_marginLeft="96px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="城市"/>




        <TextView
            android:id="@+id/modify_city"
            android:layout_marginLeft="110px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="选择收获地址"/>


    </LinearLayout>


    <View
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#D7D7D7"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="140px">



        <TextView
            android:layout_marginLeft="96px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址"/>


        <!--address_address-->

        <EditText
            android:id="@+id/modify_address"
            android:background="@null"
            android:layout_marginLeft="110px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="详细地址"/>


    </LinearLayout>



</LinearLayout>
