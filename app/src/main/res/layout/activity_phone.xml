<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F0F0"
    tools:context="com.share.bag.ui.activitys.mine.PhoneActivity">


    <RelativeLayout
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/phone_return"
            android:layout_width="17dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/xiaoyu3"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modify_number"
            android:textSize="16dp"
            android:textColor="@color/navigation_bar_text_color"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />




    </RelativeLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:gravity="center_vertical">

   <TextView
       android:layout_marginLeft="10dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="请输入你需要绑定的新手机号"
       android:textSize="12dp"
       android:textColor="#808080" />

    </LinearLayout>



    <LinearLayout
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="10dp"
           android:textColor="@color/navigation_bar_text_color"
           android:textSize="16dp"
           android:text="@string/personal_phone"/>



        <EditText
            android:id="@+id/phone_phone"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/phone_new"
            android:textSize="14dp"
            android:textColor="#808080"/>


    </LinearLayout>


    <LinearLayout
       android:padding="10dp"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textColor="#333333"
            android:textSize="16dp" />


        <View
            android:layout_width="1dp"
            android:layout_height="26dp"
            android:background="#666666" />


        <EditText
            android:id="@+id/forget_verification"
            style="?android:attr/textViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:background="@null"
            android:hint="@string/verification"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_weight="1" />
        <!--registered_obtain-->
        <TextView
            android:id="@+id/forget_obtain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verification1"
            android:textColor="#FC655E"
            android:textSize="14dp" />


    </LinearLayout>

<LinearLayout
    android:layout_marginTop="110px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <Button
        android:id="@+id/phone_confirm"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/confirm"
        android:textColor="#FFF"
        android:textSize="16dp"
        android:background="@drawable/frame"
        />


</LinearLayout>

</LinearLayout>
