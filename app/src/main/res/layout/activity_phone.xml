<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F0F0"
    tools:context="com.share.bag.ui.activitys.mine.PhoneActivity">


    <RelativeLayout
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x144">

        <ImageView
            android:id="@+id/phone_return"
            android:layout_width="50px"
            android:layout_height="wrap_content"
            android:src="@mipmap/xiaoyu3"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modify_number"
            android:textSize="@dimen/x46"
            android:textColor="@color/navigation_bar_text_color"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />




    </RelativeLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x110"
        android:gravity="center_vertical">

   <TextView
       android:layout_marginLeft="10dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="请输入你需要绑定的新手机号"
       android:textSize="12sp"
       android:textColor="#808080" />

    </LinearLayout>



    <LinearLayout
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="10dp"
           android:textColor="@color/navigation_bar_text_color"
           android:textSize="16sp"
           android:text="@string/personal_phone"/>



        <EditText
            android:id="@+id/phone_phone"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/phone_new"
            android:textSize="31px"
            android:textColor="#808080"/>


    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/navigation_bar_text_color"
            android:text="@string/verificationcode"/>


        <EditText
            android:id="@+id/phonre_verification"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="31px"
            android:textColor="#808080"/>



        <Button
            android:background="@drawable/frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginRight="20dp"
            android:text="@string/verification2"/>


    </LinearLayout>

<LinearLayout
    android:layout_marginTop="110px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <Button
        android:id="@+id/phone_confirm"
        android:layout_width="@dimen/x864"
        android:layout_height="@dimen/x145"
        android:text="@string/confirm"
        android:textColor="#FFF"
        android:textSize="51px"
        android:background="@drawable/frame"
        />


</LinearLayout>

</LinearLayout>
