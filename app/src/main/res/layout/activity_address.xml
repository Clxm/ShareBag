<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.share.bag.ui.activitys.mine.AddressActivity">

    <RelativeLayout
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="194px">

        <ImageView
            android:id="@+id/address_return"
            android:layout_width="50px"
            android:layout_height="wrap_content"
            android:src="@mipmap/xiaoyu3"
            android:layout_marginStart="27dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收获地址"
            android:textSize="50px"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/address_save"
            android:gravity="center"
            android:layout_width="100px"
            android:layout_height="100px"
            android:text="@string/save"
            android:textSize="40px"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="36px" />



    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="36px"
        />
<Button
    android:id="@+id/btn_selector_address"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="选择地址："/>


</LinearLayout>