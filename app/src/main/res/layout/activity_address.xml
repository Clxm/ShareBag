<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context="com.share.bag.ui.activitys.mine.AddressActivity">

    <RelativeLayout
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x144">

        <ImageView
            android:id="@+id/address_return"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:src="@mipmap/xiaoyu3"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />



        <TextView
            android:id="@+id/address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加新的收货地址"
            android:textSize="@dimen/x46"
            android:textColor="@color/navigation_bar_text_color"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/address_save"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/save"
            android:textColor="@color/navigation_bar_text_color"
            android:textSize="@dimen/x46"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"/>



    </RelativeLayout>





    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x4"
        android:background="@color/navigation_bar_line_color"/>

<LinearLayout
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp">



<TextView
    android:layout_marginLeft="10dp"
    android:layout_width="60dp"
    android:layout_height="wrap_content"
    android:text="联系人"
    android:textSize="16sp"
    android:textColor="#454545"/>




    <EditText
        android:id="@+id/address_name"
        android:background="@null"
        android:layout_marginLeft="20dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="姓名"
        android:textSize="14sp"
        android:textColor="#C8C8C8"/>


</LinearLayout>
    <View
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#D7D7D7"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">



        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="电话"
            android:textSize="16sp"
            android:textColor="#454545"/>




        <EditText
            android:id="@+id/address_phone"
            android:background="@null"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="收货人电话"
            android:textSize="14sp"
            android:textColor="#C8C8C8"/>


    </LinearLayout>

    <View
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#D7D7D7"/>

    <LinearLayout
        android:id="@+id/address_layout_city"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">



        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="城市"
            android:textSize="16sp"
            android:textColor="#454545"/>




        <TextView
            android:id="@+id/address_city"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="选择收获地址"
            android:textSize="14sp"
            android:textColor="#C8C8C8"/>


    </LinearLayout>


    <View
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#D7D7D7"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">



        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="地址"
            android:textSize="16sp"
            android:textColor="#454545"/>




        <EditText
            android:id="@+id/address_address"
            android:background="@null"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="详细地址"
            android:textSize="14sp"
            android:textColor="#C8C8C8"/>
    </LinearLayout>

    <View
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#D7D7D7"/>


</LinearLayout>