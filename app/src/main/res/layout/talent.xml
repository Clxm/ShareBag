<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mLinearBaoBao"
    android:background="#FFF"
    android:layout_marginTop="20px"
    android:layout_marginLeft="36px"
    android:layout_marginRight="36px">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/home_avatar"
                android:layout_width="180px"
                android:layout_height="180px"
                android:layout_marginTop="36px"
                android:scaleType="fitXY"
                android:src="@drawable/touxiang22" />
            <!--android:layout_marginTop="34px"-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/home_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="12px"
                    android:layout_marginTop="65px"
                    android:text="俏佳人"
                    android:textColor="#303030"
                    android:textSize="36px" />

                <TextView
                    android:id="@+id/home_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="36px"
                    android:layout_marginTop="65px"
                    android:text="2017-11-22"
                    android:textSize="40px" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/talent_name"
                    android:layout_marginTop="144px">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textview6"
                        android:padding="8px"
                        android:text="白领"
                        android:textColor="#838383"
                        android:textSize="30px" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18px"
                        android:layout_marginRight="18px"
                        android:background="@drawable/textview6"
                        android:padding="8px"
                        android:text="白领"
                        android:textColor="#838383"
                        android:textSize="30px" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textview6"
                        android:padding="8px"
                        android:text="白领"
                        android:textColor="#838383"
                        android:textSize="30px" />

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/home_dynamic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="44px"
            android:text="这个包包看起来真的很好看，我非常喜欢。这个包包看起来真的很好看，我非常喜欢" />


        <LinearLayout
            android:layout_marginTop="44px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/talent_img1"
                android:layout_width="510px"
                android:layout_height="342px"
                android:layout_marginRight="16px"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/mo1" />

            <ImageView
                android:id="@+id/talent_img2"
                android:layout_width="510px"
                android:layout_height="342px"
                android:layout_marginLeft="16px"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/mo1" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="124px">


            <LinearLayout
                android:id="@+id/daren_linear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="24dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fenxiangwei" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/daren_linear1"
                android:layout_marginEnd="14dp"
                android:layout_toStartOf="@+id/daren_linear1"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dianzan2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="20"
                    android:textSize="30px" />

            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>


</LinearLayout>