<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46px">


        <ImageView
            android:id="@+id/details_comment_avatar"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_marginLeft="36px"
            android:layout_marginTop="34px"
            android:scaleType="fitXY"
            android:src="@drawable/touxiang22"
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/details_comment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12px"
                android:layout_marginTop="68px"
                android:textColor="#303030"
                android:textSize="36px"/>

            <TextView
                android:id="@+id/details_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="36px"
                android:layout_marginTop="74px"
                android:textSize="40px"/>


            <LinearLayout
                android:id="@+id/details_comment_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/talent_name"
                android:layout_marginBottom="18px">


                <TextView
                    android:id="@+id/details_comment_signature1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textview6"
                    android:padding="8px"
                    android:textColor="#838383"
                    android:textSize="30px"
                    android:visibility="gone"
                />


                <TextView
                    android:id="@+id/details_comment_signature2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18px"
                    android:layout_marginRight="18px"
                    android:background="@drawable/textview6"
                    android:padding="8px"
                    android:textColor="#838383"
                    android:textSize="30px"
                    android:visibility="gone"/>


                <TextView
                    android:id="@+id/details_comment_signature3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textview6"
                    android:padding="8px"
                    android:textColor="#838383"
                    android:textSize="30px"
                    android:visibility="gone"/>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/details_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="34px"/>


</LinearLayout>