<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8F8"
    tools:context="com.share.bag.ui.activitys.mine.wallet.PromotionActivity">


    <RelativeLayout
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="140px">


        <ImageView
            android:id="@+id/promotion_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="30px"
            android:src="@mipmap/xiaoyuhei" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="月卡办理"
            android:textColor="#000"
            android:textSize="51px" />

    </RelativeLayout>



<LinearLayout
    android:layout_marginTop="28px"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<LinearLayout
    android:layout_marginLeft="30px"
    android:layout_marginRight="30px"
    android:layout_width="match_parent"
    android:layout_height="289px"
    android:background="#f96662"
    android:gravity="center"
    android:orientation="vertical">



    <TextView
        android:id="@+id/promotion_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textSize="90px"
        android:textColor="#FFF"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总金额（元）"
        android:textSize="42px"
        android:textColor="#FFF"/>





</LinearLayout>


    <ListView
        android:id="@+id/promotion_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>





</LinearLayout>


    <LinearLayout
        android:id="@+id/promotion_withdraw"
        android:layout_width="match_parent"
        android:layout_height="129px"
        android:background="#5ba4fd"
       android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现"
            android:textColor="#FFF"
         android:textSize="43px" />


    </LinearLayout>


</LinearLayout>