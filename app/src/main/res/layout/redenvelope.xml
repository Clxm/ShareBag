<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="330px"
        android:background="@drawable/background1"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="22px">


        <LinearLayout
            android:layout_marginLeft="42px"
            android:layout_width="700px"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/redenvelope_voucher"
                android:layout_marginTop="48px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="红包卷"
                android:textColor="#1B1B1B"
                android:textSize="46px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="142px"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/redenvelope_time"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="时间"
                    android:gravity="center_vertical"
                    android:textColor="#9F9F9F"
                    android:textSize="37px"/>


                <TextView
                    android:id="@+id/redenvelope_remaining_time"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="剩余时间"
                    android:gravity="center_vertical"
                    android:textColor="#F95A56"
                    android:textSize="37px"/>


            </LinearLayout>


            <TextView
                android:id="@+id/redenvelope_all"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="部分品牌包包适用"
                android:textColor="#9F9F9F"
                android:textSize="37px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textSize="51px"
                    android:textColor="#F96662"/>

                <TextView
                    android:id="@+id/redenvelope_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="90px"
                    android:textStyle="bold"
                    android:textColor="#F96662"/>
            </LinearLayout>




            <ImageView
                android:id="@+id/redenvelope_use"
                android:layout_width="187px"
                android:layout_height="58px"
                android:src="@drawable/use" />




        </LinearLayout>




    </LinearLayout>




</LinearLayout>