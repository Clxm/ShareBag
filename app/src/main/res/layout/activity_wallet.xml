<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   android:background="#F96662"
    tools:context="com.share.bag.ui.activitys.mine.WalletActivity">

    <!--android:background="@drawable/my_beijing"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/wallet_return"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@mipmap/baixiaoyu2" />
        <!--1、所有导航栏h：126px，白底；字：46px；#2b2b2b；中等（辅助文字40px，常规）导航栏下方线h:4px;#dedede

                -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/my_wallet"
            android:textSize="18dp"
            android:textColor="@color/color_White"/>


    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总金额（元）"
        android:layout_marginStart="26dp"
        android:layout_marginTop="37dp"
        android:textColor="@color/color_White" />
    <LinearLayout
        android:layout_marginTop="27dp"
        android:layout_marginLeft="68dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <TextView
            android:id="@+id/wallet_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView12"
            android:layout_below="@+id/textView12"

            android:textColor="@color/color_White"
            android:textSize="50dp" />

</LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_marginStart="136dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView12"
            android:layout_below="@+id/textView12"
            android:text="押金："
            android:textColor="@color/color_White"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/wallet_deposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView12"
            android:layout_below="@+id/textView12"

            android:textColor="@color/color_White"
            android:textSize="16dp" />
    </LinearLayout>





    <!--android:layout_marginLeft="30px"-->
    <!--android:layout_marginRight="30px"-->
    <LinearLayout
        android:layout_marginTop="70px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:background="#F0F0F0">
        <!--android:background="@drawable/my_relative"-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="23dp"
                android:paddingLeft="23dp">


                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/wallet_voucher"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="卡劵"
                        android:textSize="48px"
                        android:textColor="#333333"/>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/dayu3"/>

                </LinearLayout>

                <View
                    android:visibility="gone"
                    android:layout_marginLeft="50px"
                    android:layout_marginRight="50px"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#F0F0F0"/>
                <!--<LinearLayout-->
                    <!--android:id="@+id/wallet_promotion"-->
                    <!--android:layout_weight="1"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="150px"-->
                    <!--android:gravity="center_vertical">-->

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="推广佣金"-->
                        <!--android:textSize="48px"-->
                        <!--android:textColor="#333333"/>-->

                    <!--<View-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_weight="1"/>-->

                    <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:src="@mipmap/dayu3"/>-->

                <!--</LinearLayout>-->
                <LinearLayout
                android:id="@+id/wallet_bill"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账单"
                android:textSize="16dp"
                android:textColor="#333333"/>

                <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

                <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/dayu3"/>

                </LinearLayout>
                <View
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0"/>

                <LinearLayout
                    android:id="@+id/wallet_monthly_card"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="月卡办理"
                        android:textSize="16dp"
                        android:textColor="#333333"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="（暂缓开通）"
                        android:textSize="12dp"
                        android:textColor="#787878"/>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/dayu3"/>

                </LinearLayout>





            </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#F0F0F0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="23dp"
                android:paddingLeft="23dp">



                <View
                    android:visibility="gone"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="50px"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#F0F0F0"/>

                <LinearLayout
                    android:id="@+id/wallet_withdraw"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="提现"
                        android:textSize="16dp"
                        android:textColor="#333333"/>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/dayu3"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        </ScrollView>

    </LinearLayout>

   </LinearLayout>
