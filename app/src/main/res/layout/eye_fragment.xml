<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="126px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/collection_collection"
            android:textSize="46px"
            android:textColor="#2b2b2b"
            />



        <TextView
            android:id="@+id/collection_management"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:text="@string/collection_management"
            android:textSize="40px"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:background="#dedede" />
<ScrollView
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/collection_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:gravity="center"
            android:text="猜你喜欢"
            android:background="#FFF"
            android:textSize="46px"
            android:textColor="#2C2C2C"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/collection_recycler2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>



    </LinearLayout>



</ScrollView>

<Button
    android:id="@+id/collection_clearing"
    android:layout_width="match_parent"
    android:layout_height="154px"
    android:text="结算"
    android:textColor="#FFF"
    android:background="#FC655E"/>


</LinearLayout>