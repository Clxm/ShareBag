<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:background="#FFF"
              android:orientation="vertical"
>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical">


        <CheckBox
            android:id="@+id/collection_adapter_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/collection_adapter_image"
                android:layout_width="108dp"
                android:layout_height="76dp"
                android:scaleType="fitXY"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/collection_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:text=""
                    android:textColor="#2c2c2c"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/collection_name"
                    android:layout_marginTop="8dp"
                    android:text="租价: "
                    android:textColor="#aaaaaa"
                    android:textSize="12dp"/>


                <TextView
                    android:id="@+id/collection_rent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView5"
                    android:layout_toEndOf="@+id/textView5"
                    android:text=""
                    android:textColor="#aaaaaa"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/collection_rent_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView5"
                    android:layout_toRightOf="@id/collection_rent"
                    android:text="元/天"
                    android:textColor="#aaaaaa"
                    android:textSize="12dp"/>


                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView5"
                    android:layout_marginTop="6dp"
                    android:text="售价: "
                    android:textColor="#aaaaaa"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/collection_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView14"
                    android:layout_alignBottom="@+id/textView14"
                    android:layout_toEndOf="@+id/textView14"
                    android:text="100"
                    android:textColor="#aaaaaa"
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/collection_sale_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/collection_sale"
                    android:layout_alignBaseline="@+id/textView14"
                    android:layout_alignBottom="@+id/textView14"
                    android:text="元"
                    android:textColor="#aaaaaa"
                    android:textSize="12dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/collection_rent"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="原价: "
                        android:textColor="#aaaaaa"
                        android:textSize="10dp"/>

                    <TextView
                        android:id="@+id/collection_original"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="#aaaaaa"
                        android:textSize="10dp"/>
                    <TextView
                        android:id="@+id/collection_original_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:textColor="#aaaaaa"
                        android:textSize="10dp"/>


                </LinearLayout>


                <TextView
                    android:id="@+id/collection_rentbutton"
                    android:layout_width="36dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:layout_toStartOf="@+id/collection_salebutton"
                    android:background="@drawable/textframe"
                    android:gravity="center"
                    android:text="租下"
                    android:textSize="13dp"/>
                <TextView
                    android:id="@+id/collection_salebutton"
                    android:layout_width="36dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/textframe1"
                    android:gravity="center"
                    android:text="购买"
                    android:textColor="#FC5951"
                    android:textSize="13dp"/>

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#E4E4E4"/>

</LinearLayout>