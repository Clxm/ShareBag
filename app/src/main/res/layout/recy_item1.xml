<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
              android:padding="6dp"
    android:background="#F2F2F2"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="188dp"
        android:orientation="vertical"
        android:background="#FFF">


        <ImageView
            android:id="@+id/recyler_commodity"
            android:layout_width="165dp"
            android:layout_height="128dp"
            android:scaleType="fitXY"
            android:src="@drawable/mo1"/>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/recyler_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="品牌品牌品牌品牌"
                android:textSize="14dp"
                android:textColor="@color/selectf_bag_name"
                android:maxEms="5"
                android:singleLine="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"></LinearLayout>

            <ImageView
                android:id="@+id/recyler_Collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@mipmap/shoucang1"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/recyler_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/recyler_name"
                android:layout_below="@+id/recyler_Collection"
                android:layout_marginLeft="10dp"
                android:text="￥"
                android:textColor="#FD7872"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/recyler_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/recyler_text2"
                android:layout_alignBottom="@+id/recyler_text2"
                android:layout_toEndOf="@+id/recyler_text1"
                android:text="200/3天"
                android:textColor="#FD7872"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"></LinearLayout>

            <TextView
                android:id="@+id/recyler_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/recyler_text1"
                android:layout_toStartOf="@+id/recyler_Collection"
                android:text="原价："
                android:textSize="12dp"
                android:textColor="@color/selectf_original_price" />

            <TextView
                android:id="@+id/recyler_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/recyler_price"
                android:layout_alignEnd="@+id/recyler_Collection"
                android:layout_marginRight="10dp"
                android:text="5000"
                android:textSize="12dp"
                android:textColor="@color/selectf_original_price" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>