<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#F2F2F2"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="6dp"
        android:background="#FFF"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/recyler_commodity"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:scaleType="fitXY"
            android:src="@drawable/mo1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/recyler_name"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text=""
                android:layout_toLeftOf="@+id/recyler_Collection"
                android:textColor="@color/selectf_bag_name"
                android:textSize="12dp"/>

            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/recyler_Collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@mipmap/shoucang1"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/recyler_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/recyler_name"
                android:layout_below="@+id/recyler_Collection"
                android:layout_marginLeft="10dp"
                android:text="￥"
                android:textColor="#FD7872"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/recyler_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/recyler_text2"
                android:layout_alignBottom="@+id/recyler_text2"
                android:layout_toEndOf="@+id/recyler_text1"
                android:text=""
                android:textColor="#FD7872"
                android:textSize="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/recyler_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/recyler_text1"
                android:layout_toStartOf="@+id/recyler_Collection"
                android:text="原价: "
                android:textColor="@color/selectf_original_price"
                android:textSize="10dp"/>

            <TextView
                android:id="@+id/recyler_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/recyler_price"
                android:layout_alignEnd="@+id/recyler_Collection"
                android:layout_marginRight="10dp"
                android:text=""
                android:textColor="@color/selectf_original_price"
                android:textSize="10dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>