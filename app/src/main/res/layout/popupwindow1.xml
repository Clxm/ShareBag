<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pop_priceGroup"
    android:orientation="vertical"
   android:background="#36000000" >
    <!--android:background="#36000000"-->
    <!--android:gravity="bottom"-->
    <RelativeLayout
        android:clickable="true"
        android:background="#FFF"
        android:layout_width="208dp"
        android:layout_height="187dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <!--android:textColor="@drawable/derew"-->
        <!--android:background="@drawable/textview1"-->
        <Button
            android:id="@+id/DiGao"
            android:layout_width="144dp"
            android:layout_height="34dp"
            android:background="@drawable/textview2"
            android:gravity="center"
            android:text="价格从低到高"
          android:textColor="#A6A6A6"
            android:textSize="16dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/GaoDi"
            android:layout_width="144dp"
            android:layout_height="34dp"
            android:background="@drawable/textview2"
            android:gravity="center"
            android:onClick="click"
            android:text="价格从高到低"
            android:textColor="#A6A6A6"
            android:textSize="16dp"
            android:layout_below="@+id/DiGao"
            android:layout_alignStart="@+id/DiGao"
            android:layout_marginTop="10dp"/>
        <!--android:textColor="@drawable/derew"-->
        <Button
            android:id="@+id/ZuDiGao"
            android:background="@drawable/textview2"
            android:layout_width="144dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:onClick="click"
            android:text="租金从低到高"
            android:textColor="#A6A6A6"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/GaoDi"
            android:layout_centerHorizontal="true" />
        <!--android:textColor="@drawable/derew"-->
        <Button
            android:id="@+id/ZuGaoDi"
            android:layout_width="144dp"
            android:layout_height="34dp"
            android:background="@drawable/textview2"
            android:gravity="center"
            android:onClick="click"
            android:text="租金从高到低"
            android:textColor="#A6A6A6"
            android:textSize="16dp"
            android:layout_below="@+id/ZuDiGao"
            android:layout_alignStart="@+id/ZuDiGao"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

</RelativeLayout>