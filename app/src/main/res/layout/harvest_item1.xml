<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="100px"
        android:layout_marginTop="45px">

        <TextView
            android:id="@+id/add_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三丰"
            android:textSize="40px"/>

        <TextView
            android:id="@+id/add_shoujihao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56px"
            android:text="17801190741"
            android:textSize="40px"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="45px">

        <TextView
            android:id="@+id/add_dizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sssssssssssssssssss"
            android:textColor="#979797"
            android:textSize="36px"/>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="50px"
        android:background="#f2f2f2"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px">

        <CheckBox
            android:id="@+id/add_checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50px"
            android:layout_weight="1"
            android:text="设为默认地址"
            android:textColor="#A0A0A0"
        />


        <TextView
            android:id="@+id/add_add"
            android:layout_width="150px"
            android:layout_height="80px"
            android:layout_alignTop="@+id/add_shanchu"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/add_shanchu"
            android:layout_weight="1"
            android:background="@drawable/textview_fang"
            android:gravity="center"
            android:text="修改"/>


        <TextView
            android:id="@+id/add_shanchu"
            android:layout_width="150px"
            android:layout_height="80px"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="50px"
            android:layout_weight="1"
            android:background="@drawable/textview_fang"
            android:gravity="center"
            android:text="删除"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px">


    </LinearLayout>


</LinearLayout>