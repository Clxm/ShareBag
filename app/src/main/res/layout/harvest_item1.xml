<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="33dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/add_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/add_shoujihao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="17801190741"
            android:textSize="14dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/add_dizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#979797"
            android:textSize="12dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="#f2f2f2"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="33dp">
        <CheckBox
            android:layout_centerVertical="true"
            android:id="@+id/add_checkbox1"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"

        />
        <TextView
            android:layout_marginLeft="5dp"
            android:text="设为默认地址"
            android:textColor="#A0A0A0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/add_add"
            android:layout_width="50dp"
            android:layout_height="27dp"
            android:layout_alignTop="@+id/add_shanchu"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/add_shanchu"

            android:background="@drawable/textview_fang"
            android:gravity="center"
            android:text="修改"/>
        <TextView
            android:id="@+id/add_shanchu"
            android:layout_width="50dp"
            android:layout_height="27dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"

            android:background="@drawable/textview_fang"
            android:gravity="center"
            android:text="删除"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        >
    </LinearLayout>
</LinearLayout>