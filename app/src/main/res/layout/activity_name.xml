<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2"
    tools:context="com.share.bag.ui.activitys.mine.NameActivity">
    <RelativeLayout
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x144">

        <ImageView
            android:id="@+id/name_return"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:src="@mipmap/xiaoyu3"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modify_name"
            android:textSize="@dimen/x46"
            android:textColor="@color/navigation_bar_text_color"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/name_save"
            android:gravity="center"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:textColor="@color/navigation_bar_text_color"
            android:textSize="@dimen/x46"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>



    </RelativeLayout>


<View
    android:layout_width="match_parent"
    android:layout_height="36px"
   />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:background="#FFF">


    <EditText
        android:layout_marginLeft="10dp"
        android:id="@+id/name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:textSize="16sp"
        android:textColor="@color/navigation_bar_text_color"
        android:hint="请输入新的昵称"/>




</LinearLayout>
    

    
    



</LinearLayout>
