<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.share.bag.ui.activitys.mine.shared.SharedActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="126px">

        <ImageView
            android:id="@+id/shared_return"
            android:layout_width="27px"
            android:layout_height="42px"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="34px"
            android:src="@mipmap/xiaoyu3" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="共享包包"
            android:textSize="46px"
            android:textColor="#2b2b2b"/>


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:background="#dedede"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/shared_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>







</LinearLayout>
