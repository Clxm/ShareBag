<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFF"
              android:orientation="vertical"
              tools:context="com.share.bag.ui.activitys.collection.ReleaseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFF"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/release_return"
            android:layout_width="9dp"
            android:layout_height="14dp"
            android:layout_marginLeft="12dp"
            android:scaleType="fitXY"
            android:src="@mipmap/xiaoyu3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="@string/Bags_select"
            android:textColor="@color/navigation_bar_text_color"
            android:textSize="15dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/navigation_bar_line_color"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/release_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>
