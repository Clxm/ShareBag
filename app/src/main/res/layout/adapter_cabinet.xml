<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="38px"
    android:layout_marginRight="38px"
    android:background="#FFF">


<LinearLayout
    android:layout_marginTop="48px"
    android:layout_width="match_parent"
    android:layout_height="504px"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="338px">


        <ImageView
            android:id="@+id/cablinet_adapter_img"
            android:layout_width="444px"
            android:layout_height="338px"
            android:src="@drawable/mo1"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_marginTop="18px"
            android:layout_marginLeft="76px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/cablinet_adapter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="心平时尚简约纽扣下皮包"
                android:textSize="28px"
                android:textColor="#3D3E43"/>


            <LinearLayout
                android:layout_marginTop="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品牌："
                    android:textColor="#5D5E66"
                    android:textSize="25px"/>

                <TextView
                    android:id="@+id/cablinet_adapter_brands"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#5D5E66"
                    android:textSize="25px"/>


            </LinearLayout>




            <LinearLayout
                android:layout_marginTop="16px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品标号："
                    android:textColor="#5D5E66"
                    android:textSize="25px"/>

                <TextView
                    android:id="@+id/cablinet_adapter_numbering"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#5D5E66"
                    android:textSize="25px"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="16px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="颜色："
                    android:textColor="#5D5E66"
                    android:textSize="25px"/>

                <TextView
                    android:id="@+id/cablinet_adapter_colour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#5D5E66"
                    android:textSize="25px"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="16px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="材质："
                    android:textColor="#5D5E66"
                    android:textSize="25px"/>

                <TextView
                    android:id="@+id/cablinet_adapter_materials"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#5D5E66"
                    android:textSize="25px"/>


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="16px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="尺寸："
                    android:textColor="#5D5E66"
                    android:textSize="25px"/>

                <TextView
                    android:id="@+id/cablinet_adapter_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#5D5E66"
                    android:textSize="25px"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">



        <TextView
            android:id="@+id/cablinet_adapter_status1"
            android:layout_marginLeft="22px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态："
            android:textSize="30px"
            android:textColor="#2C2C2C"/>




        <TextView
            android:id="@+id/cablinet_adapter_status"
            android:layout_marginLeft="24px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在租"
            android:textSize="30px"
            android:textColor="#2C2C2C"/>




        <TextView
            android:id="@+id/cablinet_adapter_rent_day1"
            android:layout_marginLeft="84px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已租:"
            android:textSize="30px"
            android:textColor="#2C2C2C"/>




        <TextView
            android:id="@+id/cablinet_adapter_rent_day"
            android:layout_marginLeft="24px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3天"
            android:textSize="30px"
            android:textColor="#2C2C2C"/>




        <TextView
            android:id="@+id/cablinet_adapter_rent"
            android:layout_marginLeft="60px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一键续租"
            android:textSize="34px"
            android:textColor="#FC5C55"/>




        <TextView
            android:id="@+id/cablinet_adapter_buyout"
            android:layout_marginLeft="72px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即买断"
            android:textSize="34px"
            android:textColor="#FC5C55"/>




<ImageView
    android:id="@+id/cablinet_adapter_share"
    android:layout_marginLeft="60px"
    android:layout_width="44px"
    android:layout_height="44px"
    android:src="@drawable/fenxiangwei"/>






    </LinearLayout>










</LinearLayout>


<View
    android:layout_width="match_parent"
    android:layout_height="4px"
    android:background="#D8D8D8"/>


</LinearLayout>