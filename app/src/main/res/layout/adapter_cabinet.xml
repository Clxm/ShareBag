<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FFF">


<LinearLayout
    android:layout_marginLeft="13dp"
    android:layout_marginRight="13dp"
    android:layout_marginTop="13dp"
    android:layout_width="match_parent"
    android:layout_height="168dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp">


        <ImageView
            android:id="@+id/cablinet_adapter_img"
            android:layout_width="148dp"
            android:layout_height="112dp"
            android:src="@drawable/mo1"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/cablinet_adapter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="心平时尚简约纽扣下皮包"
                android:textSize="10dp"
                android:textColor="#3D3E43"/>


            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品牌："
                    android:textColor="#5D5E66"
                    android:textSize="8dp"/>

                <TextView
                    android:id="@+id/cablinet_adapter_brands"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#5D5E66"
                    android:textSize="8dp"/>


            </LinearLayout>




            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品标号："
                    android:textColor="#5D5E66"
                    android:textSize="8dp"/>

                <TextView
                    android:id="@+id/cablinet_adapter_numbering"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#5D5E66"
                    android:textSize="8dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="颜色："
                    android:textColor="#5D5E66"
                    android:textSize="8dp"/>

                <TextView
                    android:id="@+id/cablinet_adapter_colour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#5D5E66"
                    android:textSize="8dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="材质："
                    android:textColor="#5D5E66"
                    android:textSize="8dp"/>

                <TextView
                    android:id="@+id/cablinet_adapter_materials"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#5D5E66"
                    android:textSize="8dp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="尺寸："
                    android:textColor="#5D5E66"
                    android:textSize="8dp"/>

                <TextView
                    android:id="@+id/cablinet_adapter_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#5D5E66"
                    android:textSize="8dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/cablinet_adapter_status1"
            android:layout_marginLeft="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态:"
            android:textSize="14dp"
            android:textColor="#2C2C2C"/>
        <TextView
            android:layout_toRightOf="@id/cablinet_adapter_status1"
            android:id="@+id/cablinet_adapter_status"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在租"
            android:textSize="14dp"
            android:textColor="#2C2C2C"/>
        <TextView
            android:layout_toRightOf="@id/cablinet_adapter_status"
            android:id="@+id/cablinet_adapter_rent_day1"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已租:"
            android:textSize="14dp"
            android:textColor="#2C2C2C"/>
        <TextView
            android:layout_toRightOf="@+id/cablinet_adapter_rent_day1"
            android:id="@+id/cablinet_adapter_rent_day"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3天"
            android:textSize="14dp"
            android:textColor="#2C2C2C"/>
            <TextView
                android:layout_toRightOf="@id/cablinet_adapter_rent_day"
                android:id="@+id/cablinet_adapter_rent"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一键续租"
                android:textSize="14dp"
                android:textColor="#FC5C55"/>
            <TextView
                android:layout_marginRight="20dp"
               android:layout_alignParentRight="true"
                android:id="@+id/cablinet_adapter_buyout"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即买断"
                android:textSize="14dp"
                android:textColor="#FC5C55"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/cablinet_adapter_share"
                android:layout_marginLeft="20dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/fenxiangwei"/>
        </RelativeLayout>
</LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="4px"
    android:background="#D8D8D8"/>
</LinearLayout>