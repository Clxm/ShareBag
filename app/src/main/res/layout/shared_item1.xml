<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp">


        <ImageView
            android:id="@+id/shared_adapter_img"
            android:layout_width="118dp"
            android:layout_height="94dp"
            android:scaleType="fitXY"
            android:src="@drawable/mo1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/stutas"
                    android:textSize="14dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="正在租" />

                <TextView
                    android:id="@+id/shared_adapter_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-11-11"
                    android:textColor="#3D3E43"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/shared_adapter_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="心平时尚简约纽扣下皮包"
                    android:textColor="#3D3E43"
                    android:textSize="10dp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="1" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品牌："
                    android:textColor="#5D5E66"
                    android:textSize="8dp" />

                <TextView
                    android:id="@+id/shared_adapter_brands"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#5D5E66"
                    android:textSize="8dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品标号："
                    android:textColor="#5D5E66"
                    android:textSize="8dp" />

                <TextView
                    android:id="@+id/shared_adapter_numbering"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#5D5E66"
                    android:textSize="8dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="颜色："
                    android:textColor="#5D5E66"
                    android:textSize="8dp" />

                <TextView
                    android:id="@+id/shared_adapter_colour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#5D5E66"
                    android:textSize="8dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="尺寸："
                    android:textColor="#5D5E66"
                    android:textSize="8dp" />

                <TextView
                    android:id="@+id/shared_adapter_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#5D5E66"
                    android:textSize="8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <TextView
                    android:id="@+id/shared_adapter_buyout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="#3D3E43"
                    android:textSize="12dp" />


                <TextView
                    android:id="@+id/shared_adapter_buyout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"

                    android:textColor="#3D3E43"
                    android:textSize="12dp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />


                <TextView
                    android:id="@+id/shared_adapter_rent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="租金"
                    android:textColor="#FC655E"
                    android:textSize="12dp" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="#DDDDDD" />


</LinearLayout>