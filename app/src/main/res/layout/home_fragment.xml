<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/shouye"/>


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshlayout"
        android:layout_width="@dimen/x1080"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/home_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.zhouwei.mzbanner.MZBannerView
                            android:id="@+id/first_vp"
                            android:layout_width="match_parent"
                            android:layout_height="552px"
                            app:canLoop="true"
                            app:indicatorAlign="center"
                            app:indicatorPaddingLeft="10px"
                            app:open_mz_mode="false" />

                        <!--<EditText-->
                            <!--android:id="@+id/home_searchView"-->
                            <!--android:layout_width="@dimen/x1080"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_gravity="center_vertical"-->
                            <!--android:layout_margin="10dp"-->
                            <!--android:drawableLeft="@drawable/fangdaxiao"-->
                            <!--android:drawablePadding="5dp"-->
                            <!--android:hint="请输入关键字"-->
                            <!--android:imeOptions="actionSearch"-->
                            <!--android:inputType="text"-->
                            <!--android:textSize="16sp"-->
                            <!--android:background="#F7F7F7"-->
                            <!--android:layout_marginLeft="20px"-->
                            <!--android:layout_marginRight="20px"/>-->
                    </RelativeLayout>






                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="18px"
                    android:background="#F2F2F2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y170"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="250px"
                    android:paddingRight="250px">

                    <!--画左边的那条线-->
                    <View
                        android:layout_width="120px"
                        android:layout_height="2px"
                        android:layout_weight="1"
                        android:background="#E8E8E8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="29px"
                        android:layout_marginRight="29px"
                        android:text="品牌专区"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                    <!--画右边的那条线-->
                    <View
                        android:layout_width="120px"
                        android:layout_height="2px"
                        android:layout_weight="1"
                        android:background="#E8E8E8" />

                </LinearLayout>
                <!--品牌专区-->
                <include layout="@layout/brand" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="18px"
                    android:background="#F1F1F1" />

                <LinearLayout
                    android:layout_marginTop="60px"
                    android:layout_marginBottom="48px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="250px"
                    android:paddingRight="250px">

                    <!--画左边的那条线-->
                    <View
                        android:layout_width="120px"
                        android:layout_height="2px"
                        android:layout_weight="1"
                        android:background="#E8E8E8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="29px"
                        android:layout_marginRight="29px"
                        android:text="每日精选"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                    <!--画右边的那条线-->
                    <View
                        android:layout_width="120px"
                        android:layout_height="2px"
                        android:layout_weight="1"
                        android:background="#E8E8E8" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="#DFDFDF"
                    android:layout_marginLeft="36px"
                    android:layout_marginRight="36px"/>


                <!--每日精选-->
                <include

                    layout="@layout/eatured" />

                <!--包包达人-->
                <View
                    android:layout_marginTop="46px"
                    android:layout_width="match_parent"
                    android:layout_height="18px"
                    android:background="#F1F1F1" />
                <LinearLayout
                    android:layout_marginTop="60px"
                    android:layout_marginBottom="48px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="250px"
                    android:paddingRight="250px">

                    <!--画左边的那条线-->
                    <!--<View-->
                        <!--android:layout_width="@dimen/x100"-->
                        <!--android:layout_height="1dp"-->
                        <!--android:layout_weight="1"-->
                        <!--android:background="@android:color/darker_gray" />-->


                    <View
                        android:layout_width="120px"
                        android:layout_height="2px"
                        android:layout_weight="1"
                        android:background="#E8E8E8" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="包包达人"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                    <!--画右边的那条线-->
                    <!--<View-->
                        <!--android:layout_width="100px"-->
                        <!--android:layout_height="@dimen/y1"-->
                        <!--android:layout_weight="1"-->
                        <!--android:background="@android:color/darker_gray" />-->

                    <View
                        android:layout_width="120px"
                        android:layout_height="2px"
                        android:layout_weight="1"
                        android:background="#E8E8E8" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="#DFDFDF"
                    android:layout_marginLeft="36px"
                    android:layout_marginRight="36px"/>


                <!--包包达人详情-->
                <include

                    layout="@layout/talent" />

                <!--邀请好友-->
                <ImageView
                    android:id="@+id/home_share"
                    android:layout_width="@dimen/x1080"
                    android:layout_height="@dimen/y426"
                    android:scaleType="fitXY"
                    android:src="@drawable/mo2" />

            </LinearLayout>

        </ScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</LinearLayout>