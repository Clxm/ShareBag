<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="644px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingRight="18px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="18px">

                <ImageView
                    android:id="@+id/home_business_img1"
                    android:layout_weight="1"
                    android:paddingRight="18px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:id="@+id/home_business_img2"
                    android:layout_weight="1"
                    android:paddingLeft="18px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />

        </LinearLayout>

            <ImageView
                android:id="@+id/home_business_img3"
                android:layout_weight="1"
                android:paddingTop="18px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

    </LinearLayout>

        <ImageView
            android:id="@+id/home_business_img4"
            android:layout_weight="2"
            android:paddingLeft="18px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

</LinearLayout>


