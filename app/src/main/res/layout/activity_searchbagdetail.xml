<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#F2F2F2"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x144">


        <ImageView
            android:id="@+id/searchDetails_return"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/xiaoyu3" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="搜索"
            android:textSize="@dimen/x46"
            android:textColor="@color/navigation_bar_text_color"/>
        <!--android:textStyle="bold"-->

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x4"
        android:background="@color/navigation_bar_line_color" />
<android.support.v7.widget.RecyclerView
    android:layout_marginTop="10dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:id="@+id/searchbagdetail_recyclerview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

</LinearLayout>