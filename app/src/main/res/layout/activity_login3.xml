<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.share.bag.ui.activitys.mine.Login">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:src="@drawable/touxiang22"
                android:layout_marginTop="33dp"
                android:id="@+id/imageView6"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />




            <LinearLayout
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/imageView6"
                android:layout_alignParentStart="true"
                android:layout_marginTop="33dp"
                android:id="@+id/linearLayout3">



                <EditText
                    android:id="@+id/login_phone"
                    android:textSize="14dp"
                    style="?android:attr/textViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/login_phone"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:digits="1234567890"
                    android:maxLength="11"
                    />
                <!--xmlï¼šandroid:maxLength="10"-->
                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#DFDFDF"/>
            </LinearLayout>


            <LinearLayout
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/linearLayout3"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:id="@+id/linearLayout4">



                <EditText
                    android:id="@+id/login_password"
                    android:textSize="14dp"
                    style="?android:attr/textViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/login_password"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:maxLength="16"
                    />






                <!--android:digits="@string/password_password"-->
                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#DFDFDF"/>

            </LinearLayout>



            <!--android:layout_marginLeft="150px"-->
            <!--android:layout_marginRight="150px"-->



            <Button
                android:id="@+id/login_login"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_login"
                android:background="#FC655E"
                android:textColor="#FFF"
                android:layout_below="@+id/linearLayout4"
                android:layout_alignParentStart="true"
                android:layout_marginTop="33dp" />




            <LinearLayout
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_login"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/login_registered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_registered"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="1"/>


                <TextView
                    android:id="@+id/login_forget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_forget"/>




            </LinearLayout>






            <LinearLayout
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/login_login"
                android:layout_alignParentStart="true"
                android:layout_marginTop="100dp"
                android:id="@+id/linearLayout5">


                <View
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#838383"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_third"
                    android:textSize="12dp"/>

                <View
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#838383"/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_below="@+id/linearLayout5"
                android:layout_alignParentStart="true"
                >

                <ImageView
                    android:id="@+id/login_qq"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/qq_icon"/>


                <ImageView
                    android:id="@+id/login_weixin"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/weixin_icon"/>


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>




</RelativeLayout>