<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fm_show"
        android:layout_above="@+id/rg_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></FrameLayout>

    <com.share.bag.view.NavigationBarLine android:layout_width="match_parent"
                                          android:layout_alignParentBottom="true"
                                          android:layout_marginBottom="@dimen/x160"
                                          android:layout_height="wrap_content"/>
    <RadioGroup
        android:id="@+id/rg_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x160"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="@color/color_White">

        <RadioButton
            android:id="@+id/home_radiobt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6px"
            android:drawableTop="@drawable/china_nav_bt"
            android:gravity="center"
            android:text="首页"
            android:textSize="24px" />

        <RadioButton
            android:id="@+id/live_radiobt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6px"
            android:drawableTop="@drawable/china_nav_xuan"
            android:gravity="center"
            android:text="选包"
            android:textSize="24px" />

        <RadioButton
            android:id="@+id/video_radiobt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6px"
            android:drawableTop="@drawable/china_nav_bt3"
            android:gravity="center"
            android:text="上传"
            android:textSize="24px" />

        <RadioButton
            android:id="@+id/eye_radiobt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6px"
            android:drawableTop="@drawable/china_nav_bt4"
            android:gravity="center"
            android:text="收藏"
            android:textSize="24px" />

        <RadioButton
            android:id="@+id/china_radiobt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6px"
            android:drawableTop="@drawable/china_nav_bt5"
            android:gravity="center"
            android:text="我的"
            android:textSize="24px" />

    </RadioGroup>

</RelativeLayout>