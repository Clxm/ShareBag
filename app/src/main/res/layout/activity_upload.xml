<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/upload_return"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/xiaoyu3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/submit_text"
            android:textColor="@color/navigation_bar_text_color"
            android:textSize="15dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/navigation_bar_line_color"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_btn_submit">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/uplad_brand_relative1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="@string/brand"
                        android:textColor="@color/navigation_bar_text_color"
                        android:textSize="14dp"/>

                    <EditText
                        android:id="@+id/et_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:background="@null"
                        android:ellipsize="end"
                        android:hint="请输入包包品牌"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="@color/bag_detail_color"
                        android:textSize="13dp"
                    />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.6dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#F2F2F2"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">


                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="@string/originalprice"
                        android:textColor="@color/navigation_bar_text_color"
                        android:textSize="14dp"/>

                    <EditText
                        android:id="@+id/et_original_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:background="@null"
                        android:ellipsize="end"
                        android:hint="请输入包包原价"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="@color/bag_detail_color"
                        android:textSize="13dp"/>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.6dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#F2F2F2"/>

                <RelativeLayout
                    android:id="@+id/uplad_brand_relative3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">


                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="@string/size"
                        android:textColor="@color/navigation_bar_text_color"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/tv_size_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/tv_size_l"
                        android:background="@drawable/textview_border"
                        android:padding="10dp"
                        android:text="M"
                        android:textColor="@color/bag_detail_color"
                        android:textSize="13dp"/>

                    <TextView
                        android:id="@+id/tv_size_l"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/tv_size_xl"
                        android:background="@drawable/textview_border"
                        android:padding="10dp"
                        android:text="L"
                        android:textColor="@color/bag_detail_color"
                        android:textSize="13dp"/>

                    <TextView
                        android:id="@+id/tv_size_xl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/textview_border"
                        android:padding="10dp"
                        android:text="XL"
                        android:textColor="@color/bag_detail_color"
                        android:textSize="13dp"/>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.6dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#F2F2F2"/>


                <RelativeLayout
                    android:id="@+id/uplad_brand_relative4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">


                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="@string/material"
                        android:textColor="@color/navigation_bar_text_color"
                        android:textSize="14dp"/>


                    <EditText
                        android:id="@+id/upload_material"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:background="@null"
                        android:ellipsize="end"
                        android:hint="请输入包包材质"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="@color/bag_detail_color"
                        android:textSize="13dp"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.6dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#F2F2F2"/>

                <RelativeLayout
                    android:id="@+id/uplad_brand_relative5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">


                    <TextView
                        android:id="@+id/text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="@string/rentaltime"
                        android:textColor="@color/navigation_bar_text_color"
                        android:textSize="14dp"/>


                    <TextView
                        android:id="@+id/tv_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/tv_month"
                        android:background="@drawable/textview_border"
                        android:padding="10dp"
                        android:text="@string/day"
                        android:textColor="@color/bag_detail_color"
                        android:textSize="13dp"/>


                    <TextView
                        android:id="@+id/tv_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/tv_long"
                        android:background="@drawable/textview_border"
                        android:padding="10dp"
                        android:text="@string/month"
                        android:textColor="@color/bag_detail_color"
                        android:textSize="13dp"/>


                    <TextView
                        android:id="@+id/tv_long"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/textview_border"
                        android:padding="10dp"
                        android:text="@string/long1"
                        android:textColor="@color/bag_detail_color"
                        android:textSize="13dp"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.6dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#F2F2F2"/>

                <RelativeLayout
                    android:id="@+id/uplad_brand_relative6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">


                    <TextView
                        android:id="@+id/text6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="@string/sell"
                        android:textColor="@color/navigation_bar_text_color"
                        android:textSize="14dp"/>


                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="@string/yes1"
                            android:textColor="@color/bag_detail_color"
                            android:textSize="13dp"/>
                        <RadioButton
                            android:id="@+id/rb_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no1"
                            android:textColor="@color/bag_detail_color"
                            android:textSize="13dp"/>

                    </RadioGroup>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.6dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#F2F2F2"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">


                    <TextView
                        android:id="@+id/text7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="@string/sellprice"
                        android:textColor="@color/navigation_bar_text_color"
                        android:textSize="14dp"/>


                    <EditText
                        android:id="@+id/upload_sell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:background="@null"
                        android:ellipsize="end"
                        android:hint="请输入出售价格"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="@color/bag_detail_color"
                        android:textSize="13dp"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.6dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#F2F2F2"/>


                <TextView
                    android:id="@+id/text8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="@string/text1"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">


                    <RelativeLayout
                        android:id="@+id/upload_add1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_bag1"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:src="@drawable/add_photo"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/upload_add2"
                        android:layout_width="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_bag2"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:src="@drawable/add_photo"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/upload_add3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_bag3"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:src="@drawable/add_photo"/>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/agree1"/>

                    <TextView
                        android:id="@+id/tv_bag_agreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/agree2"
                        android:textColor="#FC665F"/>

                </LinearLayout>

            </LinearLayout>


        </ScrollView>
        <RelativeLayout
            android:id="@+id/ll_btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:gravity="bottom">


            <Button
                android:id="@+id/upload_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FC655E"
                android:text="@string/submit_but"
                android:textColor="#FFF"
                android:textSize="15dp"/>

        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>
